@model CustomUserLogin.Models.Employers

@{
    ViewData["Title"] = "Employer Details";
}

<!-- Centered Card Layout -->
<div class="container ">
    <!-- Employer Details Card -->
    <div class="card shadow-sm p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="fw-bold">Employer Details - @Model.Name</h3>
            <a class="btn btn-outline-success" asp-controller="EmployerDefaulters" asp-action="Create" asp-route-id="@Model.Id">Add As Defaulter</a>

        </div>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <p><strong>Name:</strong> @Model.Name</p>
                <p><strong>Enrollment No:</strong> @Model.EnrollmentNumber</p>
                <p><strong>SSNIT Number:</strong> @Model.SSNITEmployerNumber</p>
                <p><strong>Digital Address:</strong> @Model.DigitalAddress</p>
            </div>
            <div class="col-md-6">
                <p><strong>Email:</strong> <a href="mailto:@Model.Email">@Model.Email</a></p>
                <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                <p><strong>Created Date:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")</p>
            </div>
        </div>

        <!-- Buttons -->
        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
   <br />
   <br />
   
    <h4>Default Details</h4>

    <!-- Load EmployerDefaulters Index view here -->
    <partial name="~/Views/EmployerDefaulters/Index.cshtml" model="ViewBag.EmployerDefaulters" />
    </div>
</div>


<!-- Include Lottie Files -->
<script src="https://unpkg.com/lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
